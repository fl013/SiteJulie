<%-include("../partials/headerEN")%>
<a class="lienB" href="/en/photos"> 
    Revenir à la page des photos
    </a>
<h1 class="text-center mt-3">MODIFIER PHOTO <%=photo.title%> !!</h1>

<form action="/en/photos/<%=photo._id%>?_method=PUT" method="POST">
    <div class="container w-50 border mt-4">
        <div class="form-group mt-4">
            <label for="">Titre</label>
            <input class="form-control" type="text" value="<%=photo.title%>" name="photo[title]" >
        </div>
        <div class="form-group">
            <label for="">URL</label>
            <input class="form-control" value="<%=photo.url%>" type="text" name="photo[url]" >
        </div>
        <div class="form-group">
            <label for="">ALT</label>
            <input class="form-control" value="<%=photo.alt%>" type="text" name="photo[alt]" >
        </div>
        <div class="form-group">
            <label for="">Texte</label>
            <textarea  class="form-control"  name="photo[text]" id="" cols="60" rows="10"><%=photo.text%></textarea>
        </div>

        <% if(photo.section==="Mode") { %>
            <div class="text-center my-3 d-flex justify-content-around">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="photo[section]" id="inlineRadio1" value="Mode" checked>
                    <label class="form-check-label" for="inlineRadio1">Mode</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="photo[section]" id="inlineRadio2" value="Spectacle" >
                    <label class="form-check-label" for="inlineRadio2">Spectacle</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="photo[section]" id="inlineRadio3" value="Perf">
                    <label class="form-check-label" for="inlineRadio3">Perf</label>
                  </div>
            </div>
            <%} else if(photo.section==="Spectacle") {%>
                <div class="text-center my-3 d-flex justify-content-around">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="photo[section]" id="inlineRadio1" value="Mode" >
                        <label class="form-check-label" for="inlineRadio1">Mode</label>
                      </div>
                      <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="photo[section]" id="inlineRadio2" value="Spectacle"checked >
                        <label class="form-check-label" for="inlineRadio2">Spectacle</label>
                      </div>
                      <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="photo[section]" id="inlineRadio3" value="Perf">
                        <label class="form-check-label" for="inlineRadio3">Perf</label>
                      </div>
                </div>
                <%} else{ %>
                    <div class="text-center my-3 d-flex justify-content-around">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="photo[section]" id="inlineRadio1" value="Mode" >
                            <label class="form-check-label" for="inlineRadio1">Mode</label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="photo[section]" id="inlineRadio2" value="Spectacle" >
                            <label class="form-check-label" for="inlineRadio2">Spectacle</label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="photo[section]" id="inlineRadio3" value="Perf" checked>
                            <label class="form-check-label" for="inlineRadio3">Perf</label>
                          </div>
                    </div>
                 <%}%>
        

        <button class="btn btn-danger d-block mx-auto">
            Update photo
        </button>
    </div>
</form>
<a class="lienB" href="/en/photos"> 
    Revenir à la page des photos
    </a>
<%-include("../partials/footer")%>
