<%- include("../partials/headerEN")%>
<script>
    $("#vide").toggleClass("active")
    $("#en").toggleClass("active")
</script>

<% if(currentUser) { %>
    <a href="/en/videos/new">
        Nouvelle vidéo !
    </a>
<%}%>
<% var i=1%>
<% var compt=1 %>
<div class="container-fluid conteneurvideos mt-5  ">

    <% videos.forEach(function(video) {%>
      
        <% if(i===1) { %>
            <div class="row  my-5 ml-3 justify-content-between">
                <div class="col-lg-7 col-xl-6 mb-3 ">
                  <div class="embed-responsive embed-responsive-16by9">

                    <iframe class="embed-responsive-item" width="560" height="315" src="<%=video.url%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

                  </div>
                    
                    <% if(currentUser) { %>
                        <div class="mt-3 text-center">
                            <a href="/en/videos/<%=video._id%>/edit">
                                <button class="btn btn-info">
                                    Update vidéo
                                </button>
                            </a>
                            <form class="d-inline ml-2" action="/en/videos/<%=video._id%>?_method=DELETE" method="POST">
                                <button class="btn btn-danger">
                                    Delete Video
                                </button>
                            </form>
                    </div>
                    
                <%}%>
                </div>
                <div class="col-xl-5 col-lg-4 mr-5  ">
                    <h1 class="tvideo"> <%=video.title%></h1>
                    
                    <p class="lead text-wrap mt-3"> <%=video.text%></p>
                
                    </div>
                    
                </div>
                
            </div>

            
        <% if(compt!=videos.length){ %>
        <hr class="mb-5"> 
        <% compt+=1 %> 
        <% } %>

        <%}%>
        <% if(i===-1) { %>
            
            <div class="row  my-5 ml-3 justify-content-between">
                <div class=" order-lg-2 col-lg-7 col-xl-6 mb-3 mr-4 ">
                  <div class="embed-responsive embed-responsive-16by9">

                    <iframe class="embed-responsive-item" width="560" height="315" src="<%=video.url%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

                  </div>
                    
                    <% if(currentUser) { %>
                        <div class="mt-3 text-center">
                            <a href="/en/videos/<%=video._id%>/edit">
                                <button class="btn btn-info">
                                    Update vidéo
                                </button>
                            </a>
                            <form class="d-inline ml-2" action="/en/videos/<%=video._id%>?_method=DELETE" method="POST">
                                <button class="btn btn-danger">
                                    Delete Video
                                </button>
                            </form>
                    </div>
                    
                <%}%>
                </div>
                <div class=" order-lg-1 col-xl-5 col-lg-4   ">
                    <h1 class="tvideo"> <%=video.title%></h1>
                    
                    <p class="lead text-wrap mt-3"> <%=video.text%></p>
                
                    </div>
                    
                </div>
                
            </div>
           
         <% if(compt!=videos.length) {%>
        <hr class="d-block mb-5"> 
        <% compt+=1 %> 
        <% } %>

       <% } %>

       <% i=i*-1 %>

    <%})%>

   

  

<%- include("../partials/footer")%>