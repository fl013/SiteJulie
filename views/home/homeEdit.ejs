        <div class="form-group">
            <label for="">ALT</label>
            <input class="form-control" value="<%=photoHome.alt%>" type="text" name="photoHome[alt]" >
        </div>
        <div class="form-group">
            <label for="">Texte</label>
            <textarea  class="form-control"  name="photoHome[text]" id="" cols="60" rows="10"><%=photo.text%></textarea>
        </div>

        

        <button class="btn btn-danger d-block mx-auto">
            Update photo
        </button>
    </div>
</form>
